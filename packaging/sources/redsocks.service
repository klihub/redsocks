[Unit]
Description=Transparent SOCKS/HTTP proxy for TCP connections

[Service]
Type=simple
EnvironmentFile=/etc/sysconfig/redsocks.env
PIDFile=$REDSOCKS_PIDFILE
ExecStartPre=/bin/touch $REDSOCKS_PIDFILE
ExecStartPre=/bin/chown nobody $REDSOCKS_PIDFILE
ExecStartPre=/usr/bin/redsocks -t -c $REDSOCKS_CONF
ExecStart=/usr/bin/redsocks -c $REDSOCKS_CONF -p $REDSOCKS_PIDFILE
Restart=on-abort

[Install]
WantedBy=multi-user.target
